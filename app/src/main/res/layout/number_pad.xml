<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="425dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    android:layout_gravity="bottom"
    android:background="@color/colorNumberPad"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height= "match_parent"
        android:orientation="vertical"
        android:paddingTop="21dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:id="@+id/first_row"
            android:layout_weight="1"
            >
            <com.andexert.library.RippleView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:rv_type="rectangle"
                app:rv_rippleDuration="150"
                app:rv_alpha="200"
                app:rv_color="@color/colorAccent"
                app:rv_ripplePadding="50dp"
                app:rv_centered="true"
                android:layout_weight="1"
                >
                <Button
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:text="7" android:textSize="50sp"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:onClick="buttonTouched"
                    android:tag="7"
                    />
            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:rv_type="rectangle"
                app:rv_rippleDuration="150"
                app:rv_alpha="200"
                app:rv_color="@color/colorAccent"
                app:rv_ripplePadding="50dp"
                app:rv_centered="true"
                android:layout_weight="1"
                >
                <Button
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:text="8" android:textSize="50sp"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:onClick="buttonTouched"
                    android:tag="8"
                    />
            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:rv_type="rectangle"
                app:rv_rippleDuration="150"
                app:rv_alpha="200"
                app:rv_color="@color/colorAccent"
                app:rv_ripplePadding="50dp"
                app:rv_centered="true"
                android:layout_weight="1"
                >
                <Button
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:text="9" android:textSize="50sp"
                    android:background="@android:color/transparent"
                    android:textColor="#FFFFFF"
                    android:onClick="buttonTouched"
                    android:tag="9"
                    />
            </com.andexert.library.RippleView>
            <com.andexert.library.RippleView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:rv_type="rectangle"
                app:rv_rippleDuration="150"
                app:rv_alpha="200"
                app:rv_color="@color/colorAccent"
                app:rv_ripplePadding="50dp"
                app:rv_centered="true"
                android:layout_weight="1"
                >
                <Button
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:text="x" android:textSize="50sp"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:onClick="buttonTouched"
                    android:tag="x"
                    />
            </com.andexert.library.RippleView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:id="@+id/second_row"
            android:layout_weight="1"
            >
            <com.andexert.library.RippleView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:rv_type="rectangle"
                app:rv_rippleDuration="150"
                app:rv_alpha="200"
                app:rv_color="@color/colorAccent"
                app:rv_ripplePadding="50dp"
                app:rv_centered="true"
                android:layout_weight="1"
                >
                <Button
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:text="4" android:textSize="50sp"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:onClick="buttonTouched"
                    android:tag="4"
                    />
            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:rv_type="rectangle"
                app:rv_rippleDuration="150"
                app:rv_alpha="200"
                app:rv_color="@color/colorAccent"
                app:rv_ripplePadding="50dp"
                app:rv_centered="true"
                android:layout_weight="1"
                >
                <Button
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:text="5" android:textSize="50sp"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:onClick="buttonTouched"
                    android:tag="5"
                    />
            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:rv_type="rectangle"
                app:rv_rippleDuration="150"
                app:rv_alpha="200"
                app:rv_color="@color/colorAccent"
                app:rv_ripplePadding="50dp"
                app:rv_centered="true"
                android:layout_weight="1"
                >
                <Button
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:text="6" android:textSize="50sp"
                    android:background="@android:color/transparent"
                    android:textColor="#FFFFFF"
                    android:onClick="buttonTouched"
                    android:tag="6"
                    />
            </com.andexert.library.RippleView>
            <com.andexert.library.RippleView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:rv_type="rectangle"
                app:rv_rippleDuration="150"
                app:rv_alpha="200"
                app:rv_color="@color/colorAccent"
                app:rv_ripplePadding="50dp"
                app:rv_centered="true"
                android:layout_weight="1"
                >
                <Button
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:text="/" android:textSize="50sp"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:onClick="buttonTouched"
                    android:tag="/"
                    />
            </com.andexert.library.RippleView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:id="@+id/third_row"
            android:layout_below="@+id/third_row"
            android:layout_weight="1"
            >
            <com.andexert.library.RippleView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:rv_type="rectangle"
                app:rv_rippleDuration="150"
                app:rv_alpha="200"
                app:rv_color="@color/colorAccent"
                app:rv_ripplePadding="50dp"
                app:rv_centered="true"
                android:layout_weight="1"
                >
                <Button
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:text="1" android:textSize="50sp"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:onClick="buttonTouched"
                    android:tag="1"
                    />
            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:rv_type="rectangle"
                app:rv_rippleDuration="150"
                app:rv_alpha="200"
                app:rv_color="@color/colorAccent"
                app:rv_ripplePadding="50dp"
                app:rv_centered="true"
                android:layout_weight="1"
                >
                <Button
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:text="2" android:textSize="50sp"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:onClick="buttonTouched"
                    android:tag="2"
                    />
            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:rv_type="rectangle"
                app:rv_rippleDuration="150"
                app:rv_alpha="200"
                app:rv_color="@color/colorAccent"
                app:rv_ripplePadding="50dp"
                app:rv_centered="true"
                android:layout_weight="1"
                >
                <Button
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:text="3" android:textSize="50sp"
                    android:background="@android:color/transparent"
                    android:textColor="#FFFFFF"
                    android:onClick="buttonTouched"
                    android:tag="3"
                    />
            </com.andexert.library.RippleView>
            <com.andexert.library.RippleView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:rv_type="rectangle"
                app:rv_rippleDuration="150"
                app:rv_alpha="200"
                app:rv_color="@color/colorAccent"
                app:rv_ripplePadding="50dp"
                app:rv_centered="true"
                android:layout_weight="1"
                >
                <Button
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:text="-" android:textSize="50sp"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:onClick="buttonTouched"
                    android:tag="-"
                    />
            </com.andexert.library.RippleView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:id="@+id/fourth_row"
            android:layout_weight="1"
            >
            <com.andexert.library.RippleView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:rv_type="rectangle"
                app:rv_rippleDuration="150"
                app:rv_alpha="200"
                app:rv_color="@color/colorAccent"
                app:rv_ripplePadding="50dp"
                app:rv_centered="true"
                android:layout_weight="1"
                >
                <Button
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:text="B" android:textSize="50sp"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:onClick="backTouched"
                    />
            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:rv_type="rectangle"
                app:rv_rippleDuration="150"
                app:rv_alpha="200"
                app:rv_color="@color/colorAccent"
                app:rv_ripplePadding="50dp"
                app:rv_centered="true"
                android:layout_weight="1"
                >
            <Button
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:text="0" android:textSize="50sp"
                android:textColor="#FFFFFF"
                android:background="@android:color/transparent"
                android:onClick="buttonTouched"
                android:tag="0"
                />
            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:rv_type="rectangle"
                app:rv_rippleDuration="150"
                app:rv_alpha="200"
                app:rv_color="@color/colorAccent"
                app:rv_ripplePadding="50dp"
                app:rv_centered="true"
                android:layout_weight="1"
                >
            <Button
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:text="." android:textSize="50sp"
                android:background="@android:color/transparent"
                android:textColor="#FFFFFF"
                android:onClick="buttonTouched"
                android:tag="."
                />
            </com.andexert.library.RippleView>
            <com.andexert.library.RippleView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:rv_type="rectangle"
                app:rv_rippleDuration="150"
                app:rv_alpha="200"
                app:rv_color="@color/colorAccent"
                app:rv_ripplePadding="50dp"
                app:rv_centered="true"
                android:layout_weight="1"
                >
            <Button
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:text="+" android:textSize="50sp"
                android:textColor="#FFFFFF"
                android:background="@android:color/transparent"
                android:onClick="buttonTouched"
                android:tag="+"
                />
            </com.andexert.library.RippleView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
